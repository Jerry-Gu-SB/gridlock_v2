script/source = "extends Node3D

@export var death_zone_scene: PackedScene
@export var spawn_origin: Vector3 = Vector3.ZERO
@export var spacing: float = 3.0

var active_zones: Array[Node3D] = []
var pattern_index := 0
var patterns = [\"checkmark\", \"x\", \"zigzag\"]

func _ready():
	GlobalTimer.timer_expired.connect(_on_timer_expired)

func _on_timer_expired():
	await get_tree().process_frame  # ensures _on_global_timer_expired runs in DeathZone

	for zone in active_zones:
		if zone:
			zone.queue_free()
	active_zones.clear()

	pattern_index = (pattern_index + 1) % patterns.size()
	var new_positions = get_pattern_positions(patterns[pattern_index])

	for pos in new_positions:
		var zone = death_zone_scene.instantiate()
		add_child(zone)  # must add to tree before setting transforms
		zone.global_transform.origin = spawn_origin + pos * spacing
		active_zones.append(zone)

func get_pattern_positions(pattern: String) -> Array[Vector3]:
	match pattern:
		\"checkmark\":
			return [
				Vector3(0, 0, 5),
				Vector3(1, 0, 4),
				Vector3(2, 0, 3),
				Vector3(3, 0, 2),
				Vector3(4, 0, 1),
				Vector3(5, 0, 2),
				Vector3(6, 0, 3),
				Vector3(7, 0, 4),
				Vector3(8, 0, 5),
				Vector3(9, 0, 6)
			]
		\"x\":
			return [
				Vector3(0, 0, 0),
				Vector3(1, 0, 1),
				Vector3(2, 0, 2),
				Vector3(3, 0, 3),
				Vector3(4, 0, 4),
				Vector3(0, 0, 4),
				Vector3(1, 0, 3),
				Vector3(2, 0, 2),
				Vector3(3, 0, 1),
				Vector3(4, 0, 0)
			]
		\"zigzag\":
			return [
				Vector3(0, 0, 0),
				Vector3(1, 0, 1),
				Vector3(2, 0, 0),
				Vector3(3, 0, 1),
				Vector3(4, 0, 0),
				Vector3(5, 0, 1),
				Vector3(6, 0, 0),
				Vector3(7, 0, 1),
				Vector3(8, 0, 0),
				Vector3(9, 0, 1)
			]
		_:
			return []
"

